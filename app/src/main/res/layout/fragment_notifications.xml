<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entryManagement.EntryManagementFragment">

    <ImageButton
        android:id="@+id/addEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="164dp"
        android:contentDescription="add a new entry with the displayed text"
        android:src="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/entryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="160dp"
        android:ems="10"
        android:hint="Diary entry text"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addEntry"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/removeLastEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="164dp"
        android:contentDescription="remove the last entry"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Diary entry text"
        app:layout_constraintBottom_toBottomOf="@+id/entryText"
        app:layout_constraintEnd_toStartOf="@+id/entryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/entryText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Remove last entry"
        app:layout_constraintBottom_toTopOf="@+id/removeLastEntry"
        app:layout_constraintEnd_toEndOf="@+id/removeLastEntry" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Add new entry"
        app:layout_constraintBottom_toTopOf="@+id/addEntry"
        app:layout_constraintEnd_toEndOf="@+id/addEntry" />
</androidx.constraintlayout.widget.ConstraintLayout>